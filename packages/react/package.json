{
  "name": "@singularity-payments/react",
  "version": "1.2.5",
  "publishConfig": {
    "access": "public"
  },
  "description": "React client for M-Pesa payments",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "keywords": [
    "mpesa",
    "react",
    "payments",
    "kenya"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/singularityke/singularity-payments-js",
    "directory": "packages/react"
  },
  "license": "Apache-2.0",
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "dependencies": {
    "@singularity-payments/core": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.0",
    "@vitest/coverage-v8": "^4.0.16",
    "happy-dom": "^20.1.0",
    "react": "^18.3.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
