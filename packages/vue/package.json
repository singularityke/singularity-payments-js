{
  "name": "@singularity-payments/vue",
  "version": "1.2.3",
  "publishConfig": {
    "access": "public"
  },
  "description": "Vue client for M-Pesa payments",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/singularityke/singularity-payments-js",
    "directory": "packages/vue"
  },
  "keywords": [
    "mpesa",
    "vue",
    "vue3",
    "nuxt",
    "payments",
    "kenya"
  ],
  "license": "Apache-2.0",
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "dependencies": {
    "@singularity-payments/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vue": "^3.4.0"
  }
}
