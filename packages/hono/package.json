{
  "name": "@singularity-payments/hono",
  "version": "1.2.5",
  "publishConfig": {
    "access": "public"
  },
  "description": "Hono integration for M-Pesa payments",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "build": "tsup src/index.ts --format cjs,esm --dts --external hono",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external hono --watch"
  },
  "keywords": [
    "mpesa",
    "hono",
    "payments",
    "kenya"
  ],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.25.0",
  "peerDependencies": {
    "hono": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/singularityke/singularity-payments-js",
    "directory": "packages/hono"
  },
  "dependencies": {
    "@singularity-payments/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "hono": "^4.6.16",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
