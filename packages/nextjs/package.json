{
  "name": "@singularity-payments/nextjs",
  "version": "1.0.0",
  "description": "Next.js integration for M-Pesa payments",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsup src/index.ts --format cjs,esm --dts --external next",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external next --watch"
  },
  "keywords": [
    "mpesa",
    "nextjs",
    "payments",
    "kenya"
  ],
  "author": "",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.25.0",
  "peerDependencies": {
    "next": ">=13.0.0"
  },
  "dependencies": {
    "@singularity-payments/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "next": "^15.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
